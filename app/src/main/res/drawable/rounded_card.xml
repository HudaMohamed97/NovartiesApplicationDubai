<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <corners android:topLeftRadius="@dimen/space_15"
                android:bottomLeftRadius="@dimen/space_15"
                android:topRightRadius="@dimen/space_15"
                android:bottomRightRadius="@dimen/space_15"
                />
            <solid android:color="@color/header_color" />
        </shape>
    </item>

    <item android:left="100dp">
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="30dp" />
            <corners android:bottomRightRadius="@dimen/space_15"
             android:topRightRadius="@dimen/space_15"/>
            <solid android:color="@color/dark_color1" />
        </shape>
    </item>

</layer-list>